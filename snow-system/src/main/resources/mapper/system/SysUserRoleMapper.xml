<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.stylesmile.system.mapper.SysUserRoleMapper">
    <resultMap id="role" type="com.stylesmile.system.entity.SysRole"/>
    <resultMap id="userRole" type="com.stylesmile.system.entity.SysUserRole"/>
    <parameterMap id="role2" type="com.stylesmile.system.entity.SysUserRole"/>

    <select id="getUserRoleList" resultMap="role" parameterType="java.lang.String">
        SELECT sr.id,sr.code,sr.name FROM sys_role sr
        left join sys_user_role sur on sur.role_id = sr.id
        WHERE sr.del_flag = 0 and sur.user_id =#{userId}
    </select>

</mapper>
